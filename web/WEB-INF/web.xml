<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NovoUsuarioServlet</servlet-name>
        <servlet-class>controller.NovoUsuarioServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EfetivaCadastroServlet</servlet-name>
        <servlet-class>controller.EfetivaCadastroServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NovoPersonagemServlet</servlet-name>
        <servlet-class>controller.NovoPersonagemServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EfetivaPersonagemServlet</servlet-name>
        <servlet-class>controller.EfetivaPersonagemServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PersonagensServlet</servlet-name>
        <servlet-class>controller.PersonagensServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NovaSkinServlet</servlet-name>
        <servlet-class>controller.NovaSkinServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UploadSkinServlet</servlet-name>
        <servlet-class>controller.UploadSkinServlet</servlet-class>
        <multipart-config>
            <max-file-size>20848820</max-file-size>
            <max-request-size>418018841</max-request-size>
        </multipart-config>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/loginservlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NovoUsuarioServlet</servlet-name>
        <url-pattern>/novousuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EfetivaCadastroServlet</servlet-name>
        <url-pattern>/efetivacadastro</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NovoPersonagemServlet</servlet-name>
        <url-pattern>/novopersonagem</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EfetivaPersonagemServlet</servlet-name>
        <url-pattern>/efetivapersonagem</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PersonagensServlet</servlet-name>
        <url-pattern>/personagens</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NovaSkinServlet</servlet-name>
        <url-pattern>/novaskin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UploadSkinServlet</servlet-name>
        <url-pattern>/uploadskin</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
